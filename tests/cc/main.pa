
#include <iostream>

#include "String.h"
#include "CLexer.h"
#include "CParser.h"
#include "Channels.h"

using namespace std;

void tokenize(int argc,const char *argv[],TokChan &tc);
void parse(TokChan &tc);

int pMain(int argc,const char *argv[])
{

  if (argc < 2) {
    cerr << "Usage:  " << argv[0] << " <filename>" << endl;
    return 1;
  }

  TokChan tc;

  par {
    tokenize(argc,argv,tc);
    parse(tc);
  }
  return 0;
}

void tokenize(int argc,const char *argv[],TokChan &tc)
{
  CLexer cl(tc);
  // Tokenize all files.
  for (int i = 1; i != argc; ++i) {
    cl.reset(argv[i]);
    cl.yylex();
  }
  cl.send_alldone();
}

void parse(TokChan &tc)
{
  CParser cp;
  while(true) {
    Tokens tk = tc.get();
    if (tk._tok < 0) break;
    cp.parse(tk._tok,tk);
  }
}
